
<html>
<head>
    <title>Crush the Rust</title>
</head>

<script type="text/javascript" src="../../assets/javascript/jquery.min.js"></script>
<script type="text/javascript" src="../../assets/javascript/main.js"></script>
<script type="text/javascript" src="../../assets/javascript/bootstrap.js"></script>
<link rel="stylesheet" type="text/css" href="../../assets/css/bootstrap.css">
<link rel="stylesheet" type="text/css" href="../../assets/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="../../assets/css/bootstrap-theme.css">
<link rel="stylesheet" type="text/css" href="../../assets/css/style.css">
<body class="background-dd">

<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand text-white" href="#" >
                <span class="text-white h4"><a href="/">Dungeons & Dragons</a></span>
            </a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/characters"><span class="text-white">All</span></a></li>
                <li><a href="/characters/create"><span class="text-white">Create</span></a></li>
            </ul>
        </div>
    </div>
</nav>
<div class="row center">
    <div class="col-sm-15 background-white" style="padding: 50px;">
        <div class="page-header">

            <h1>Dungeons & Dragons</h1>

        </div>

        {{#each characters}}
        <div>
            <label> Character</label>
            <form class="form-horizontal">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="name" class="form-control" id="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label>Class:</label>
                    <div>
                        <select class="selectpicker" id="classSelect" value="{{class}}">

                                <optgroup label="select">
                                    <option value="Fighter">Fighter</option>
                                    <option value="Cleric">Cleric</option>
                                    <option value="Wizard">Wizard</option>
                                    <option value="Thief">Thief</option>
                                </optgroup>

                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>Race:</label>
                    <div>
                        <select class="selectpicker" id="raceSelect" value="{{race}}">
                            <optgroup label="select">
                                <option>Human</option>
                                <option>Dwarf</option>
                                <option>Elf</option>
                                <option>Half-elf</option>
                            </optgroup>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label>Strength:</label>
                    <div class="row">

                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="strength_stat"  value="{{strength_stat}}">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control"  disabled="disabled" id="strength_mod" value="{{strength_mod}}">
                        </div>
                        <div class="col-sm-3">
                            <button id="strength_roll" class="form-control btn btn-info">roll</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Dexterity:</label>
                    <div class="row">

                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="dex_stat" value="{{dextirity_stat}}">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" disabled="disabled" id="dex_mod" value="{{dex_mod}}">
                        </div>
                        <div class="col-sm-3">
                            <button id="dex_roll" class="form-control btn btn-info">roll</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Constitution:</label>
                    <div class="row">
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="con_stat" value="{{constitution_stat}}">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" disabled="disabled" id="con_mod" value="{{con_mod}}">
                        </div>
                        <div class="col-sm-3">
                            <button id="con_roll" class="form-control btn btn-info">roll</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Intelligence:</label>
                    <div class="row">

                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="intl_stat" value="{{intelligence_stat}}">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" disabled="disabled" id="intl_mod" value="{{intl_mod}}">
                        </div>
                        <div class="col-sm-3">
                            <button id="intl_roll" class="form-control btn btn-info">roll</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Wisdom:</label>
                    <div class="row">

                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="wsdm_stat" value="{{wisdom_stat}}">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" disabled="disabled" id="wsdm_mod" value="{{wsdm_mod}}">
                        </div>
                        <div class="col-sm-3">
                            <button id="wsdm_roll" class="form-control btn btn-info">roll</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>Charisma:</label>
                    <div class="row">
                        <div class="col-sm-3">
                            <input type="text" class="form-control" id="charisma_stat" value="{{charisma_stat}}">
                        </div>
                        <div class="col-sm-3">
                            <input type="text" class="form-control" disabled="disabled" id="charisma_mod" value="{{charisma_mod}}">
                        </div>
                        <div class="col-sm-3">
                            <button id="charisma_roll" class="form-control btn btn-info">roll</button>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label>AC:</label>
                    <div class="row">
                        <div class="col-sm-5">
                            <input type="text" disabled="disabled" class="form-control" id="ac" value="{{ac}}">
                        </div>

                    </div>
                </div>
                <button type="button" class="btn btn-default" id="editSubmitBtn" data-id="{{id}}">Submit</button>
                <button type="button"  id="deleteCharacter" class="btn btn-default" data-id="{{id}}">delete</button>
            </form>
        </div>
        {{/each}}
        </div>
    </div>
</body>
</html>

